{
  "namedInputs": {
    "sharedGlobals": [
      "{workspaceRoot}/.eslintrc.yml",
      "{workspaceRoot}/.prettierrc"
    ],
    "default": ["sharedGlobals"]
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "lint:source", "lint:readme", "test"]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/lib"]
    }
  }
}

{
  "name": "root",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint:source": "lerna run lint:source",
    "lint:readme": "lerna run lint:readme",
    "test:source": "lerna run test",
    "test": "run-s lint:source lint:readme test:source",
    "build": "lerna run build",
    "prepack": "lerna exec --parallel -- resolve-markdown-links",
    "postpack": "lerna exec --parallel --no-bail -- restore-markdown-links",
    "postinstall": "npm link ./bin ./test-utils"
  },
  "devDependencies": {
    "@livy/bin": "file:bin",
    "@livy/test-utils": "file:test-utils",
    "@types/node": "^20.4.5",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "@vitest/coverage-v8": "^0.33.0",
    "concurrently": "^8.2.0",
    "del-cli": "^5.0.0",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-plugin-local-rules": "^1.3.2",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-unicorn": "^48.0.1",
    "lerna": "^7.1.4",
    "memfs": "^4.2.0",
    "minimist": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "remark-cli": "^11.0.0",
    "remark-validate-links": "^12.1.1",
    "typescript": "^5.1.6"
  }
}
